<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.real.name.auth.service.repository.RoleMapper">
    <resultMap id="queryMap" type="com.real.name.auth.entity.Role">
        <id property="roleId" column="role_id"/>
        <result property="roleName" column="role_name"/>
        <result property="description" column="description"/>
        <result property="permissionIds" column="permission_ids"/>
        <collection property="permissions" ofType="com.real.name.auth.entity.Permission">
            <id property="permissionId" column="permission_id"/>
            <result property="url" column="url"/>
            <result property="name" column="name"/>
            <result property="description" column="description"/>
        </collection>
    </resultMap>

    <select id="getRolesByUserId" resultType="string">
        select
          r.role_name
        from
          role r, `user` u, user_role ur
        where
          r.role_id = ur.role_id
        and
          u.user_id = ur.user_id
        and
          u.user_id = #{userId}
    </select>
</mapper>