<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.real.name.pay.service.repository.PayInfoMapper">
    <resultMap id="payInfoMap" type="com.real.name.pay.entity.PayInfo">
        <id property="payId" column="pay_id"/>
        <result property="payBankCardNumber" column="pay_bank_card_number"/>
        <result property="payBankCode" column="pay_bank_code"/>
        <result property="payBankName" column="pay_bank_name"/>
        <result property="totalPayAmount" column="total_pay_amount"/>
        <result property="actualAmount" column="actual_amount"/>
        <result property="isBackPay" column="is_back_pay"/>
        <result property="balanceDate" column="balance_date"/>
        <result property="backPayMonth" column="back_pay_month"/>
        <result property="thirdPayRollCode" column="third_pay_roll_code"/>
        <result property="suffixName" column="suffix_name"/>
        <result property="uploadStatus" column="upload_status"/>
        <association property="projectDetailQuery" javaType="com.real.name.project.entity.ProjectDetailQuery" column="person_id">
            <id property="id" column="id"/>
            <result property="personStatus" column="person_status"/>
            <association property="person" javaType="com.real.name.person.entity.Person" column="person_id">
                <id property="personId" column="person_id"/>
                <result property="personName" column="person_name"/>
                <result property="corpCode" column="corp_code"/>
                <result property="subordinateCompany" column="subordinate_company"/>
                <result property="idCardType" column="id_card_type"/>
                <result property="idCardNumber" column="id_card_number"/>
                <result property="payRollBankCardNumber" column="pay_roll_bank_card_number"/>
                <result property="payRollBankName" column="pay_roll_bank_name"/>
                <result property="bankLinkNumber" column="bank_link_number"/>
                <result property="payRollTopBankCode" column="pay_roll_top_bank_code"/>
            </association>
            <association property="workerGroup" javaType="com.real.name.group.entity.WorkerGroup" column="team_sys_no">
                <id property="teamSysNo" column="team_sys_no"/>
                <result property="teamName" column="team_name"/>
            </association>
            <association property="project" javaType="com.real.name.project.entity.Project" column="project_code">
                <id property="projectCode" column="project_code"/>
                <result property="name" column="name"/>
            </association>
        </association>
    </resultMap>

    <resultMap id="payInfoQueryMap" type="com.real.name.pay.entity.query.PayInfoQuery">
        <id property="payId" column="pay_id"/>
        <result property="payBankCardNumber" column="pay_bank_card_number"/>
        <result property="payBankCode" column="pay_bank_code"/>
        <result property="payBankName" column="pay_bank_name"/>
        <result property="totalPayAmount" column="total_pay_amount"/>
        <result property="actualAmount" column="actual_amount"/>
        <result property="isBackPay" column="is_back_pay"/>
        <result property="balanceDate" column="balance_date"/>
        <result property="backPayMonth" column="back_pay_month"/>
        <result property="thirdPayRollCode" column="third_pay_roll_code"/>
        <result property="suffixName" column="suffix_name"/>
        <result property="uploadStatus" column="upload_status"/>
        <association property="projectDetailQuery" javaType="com.real.name.project.entity.ProjectDetailQuery" column="person_id">
            <id property="id" column="id"/>
            <result property="personStatus" column="person_status"/>
            <association property="person" javaType="com.real.name.person.entity.Person" column="person_id">
                <id property="personId" column="person_id"/>
                <result property="personName" column="person_name"/>
                <result property="corpCode" column="corp_code"/>
                <result property="subordinateCompany" column="subordinate_company"/>
                <result property="idCardType" column="id_card_type"/>
                <result property="idCardNumber" column="id_card_number"/>
                <result property="payRollBankCardNumber" column="pay_roll_bank_card_number"/>
                <result property="payRollBankName" column="pay_roll_bank_name"/>
                <result property="bankLinkNumber" column="bank_link_number"/>
                <result property="payRollTopBankCode" column="pay_roll_top_bank_code"/>
            </association>
            <association property="workerGroup" javaType="com.real.name.group.entity.WorkerGroup" column="team_sys_no">
                <id property="teamSysNo" column="team_sys_no"/>
                <result property="teamName" column="team_name"/>
            </association>
            <association property="project" javaType="com.real.name.project.entity.Project" column="project_code">
                <id property="projectCode" column="project_code"/>
                <result property="name" column="name"/>
            </association>
        </association>
        <association property="subContractor" javaType="com.real.name.subcontractor.entity.SubContractor">
            <id property="subContractorId" column="sub_contractor_id"/>
            <result property="corpCode" column="corp_code"/>
            <result property="corpName" column="corp_name"/>
        </association>
    </resultMap>

    <sql id="searchAll">
        py.pay_id, py.pay_bank_card_number, py.pay_bank_code, py.pay_bank_name, py.total_pay_amount,
        py.actual_amount, py.is_back_pay, py.balance_date, date_format(py.back_pay_month, '%Y-%m-%d') as back_pay_month, py.third_pay_roll_code, py.suffix_name, py.upload_status,
        p.person_id, p.person_name, p.corp_code, p.subordinate_company, p.id_card_type, p.id_card_number, p.pay_roll_bank_card_number,
        p.pay_roll_bank_name, p.bank_link_number, p.pay_roll_top_bank_code,
        wg.team_sys_no, wg.team_name,
        pj.project_code, pj.name,
        pd.id
    </sql>

    <sql id="payInfoQuerySearchAll">
        py.pay_id, py.pay_bank_card_number, py.pay_bank_code, py.pay_bank_name, py.total_pay_amount,
        py.actual_amount, py.is_back_pay, py.balance_date, date_format(py.back_pay_month, '%Y-%m-%d') as back_pay_month, py.third_pay_roll_code, py.suffix_name, py.upload_status,
        p.person_id, p.person_name, p.id_card_type, p.id_card_number, p.pay_roll_bank_card_number,
        p.pay_roll_bank_name, p.bank_link_number, p.pay_roll_top_bank_code,
        wg.team_sys_no, wg.team_name,
        sc.sub_contractor_id, sc.corp_code, sc.corp_name,
        pj.project_code, pj.name,
        pd.id, pd.person_status
    </sql>

    <insert id="savePayInfo" parameterType="com.real.name.pay.entity.PayInfo"
            keyProperty="payInfo.payId" keyColumn="pay_id" useGeneratedKeys="true">
        insert into
          pay_info (project_detail_id, pay_bank_card_number, pay_bank_code, pay_bank_name,
          total_pay_amount, actual_amount, is_back_pay, balance_date, back_pay_month, third_pay_roll_code,
          suffix_name)
        values
          (#{payInfo.projectDetailQuery.id}, #{payInfo.payBankCardNumber}, #{payInfo.payBankCode},
          #{payInfo.payBankName}, #{payInfo.totalPayAmount}, #{payInfo.actualAmount}, #{payInfo.isBackPay},
           #{payInfo.balanceDate}, #{payInfo.backPayMonth}, #{payInfo.thirdPayRollCode}, #{payInfo.suffixName} )
    </insert>

    <update id="updatePayInfoById" parameterType="com.real.name.pay.entity.PayInfo"
            keyProperty="payId" keyColumn="pay_id" useGeneratedKeys="true">
        update pay_info
        <set>
            <if test="payInfo.payBankCardNumber != null">
                pay_bank_card_number = #{payInfo.payBankCardNumber},
            </if>
            <if test="payInfo.payBankCode != null">
                pay_bank_code = #{payInfo.payBankCode},
            </if>
            <if test="payInfo.payBankName != null">
                pay_bank_name = #{payInfo.payBankName},
            </if>
            <if test="payInfo.totalPayAmount != null">
                total_pay_amount = #{payInfo.totalPayAmount},
            </if>
            <if test="payInfo.actualAmount != null">
                actual_amount = #{payInfo.actualAmount},
            </if>
            <if test="payInfo.isBackPay != null">
                is_back_pay = #{payInfo.isBackPay},
            </if>
            <if test="payInfo.balanceDate != null">
                balance_date = #{payInfo.balanceDate},
            </if>
            <if test="payInfo.backPayMonth != null">
                back_pay_month = #{payInfo.backPayMonth},
            </if>
            <if test="payInfo.thirdPayRollCode != null">
                third_pay_roll_code = #{payInfo.thirdPayRollCode},
            </if>
            <if test="payInfo.suffixName != null">
                suffix_name = #{payInfo.suffixName},
            </if>
            <if test="payInfo.uploadStatus != null">
                upload_status = #{payInfo.uploadStatus},
            </if>
        </set>
        where
          pay_id = #{payInfo.payId}
    </update>

    <delete id="deletePayInfoById" parameterType="integer">
        delete from
          pay_info
        where
          pay_id = #{payId}
    </delete>

    <select id="getAllPayInfo" resultMap="payInfoQueryMap">
        select
          <include refid="payInfoQuerySearchAll"/>
        from
          pay_info py
        left join project_detail pd on pd.id = py.project_detail_id
        left join person p on p.person_id = pd.person_id
        left join worker_group wg on wg.team_sys_no = pd.team_sys_no
        left join sub_contractor sc on sc.sub_contractor_id = wg.sub_contractor_id
        left join project pj on pj.project_code = pd.project_code
    </select>

    <select id="searchPayInfo" resultMap="payInfoQueryMap">
        select
          <include refid="payInfoQuerySearchAll"/>
        from
          pay_info py
        inner join project_detail pd on pd.id = py.project_detail_id
        inner join person p on p.person_id = pd.person_id
        inner join worker_group wg on wg.team_sys_no = pd.team_sys_no
        inner join sub_contractor sc on sc.sub_contractor_id = wg.sub_contractor_id
        inner join project pj on pj.project_code = pd.project_code
        <if test="payInfoSearch.projectCode != null">
            and pj.project_code = #{payInfoSearch.projectCode}
        </if>
        <if test="payInfoSearch.nameOrIdCardNumber != null">
            and (p.person_name like '%${payInfoSearch.nameOrIdCardNumber}%'
            or p.id_card_number like '%${payInfoSearch.nameOrIdCardNumber}%')
        </if>
    </select>

</mapper>















